{
  "$id": "https://schema.merajutasa.id/feedback/feedback-record-v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FeedbackRecordV1",
  "type": "object",
  "required": [
    "record_id",
    "event_id",
    "created_at",
    "categories",
    "redacted_text",
    "pii_categories"
  ],
  "additionalProperties": false,
  "properties": {
    "record_id": { "type": "string", "pattern": "^[0-9a-fA-F-]{36}$" },
    "event_id": { "type": "string", "pattern": "^[0-9a-fA-F-]{36}$" },
    "created_at": { "type": "string", "format": "date-time" },
    "categories": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "uniqueItems": true
    },
    "redacted_text": { "type": "string", "minLength": 1 },
    "pii_categories": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "meta": { "type": "object", "additionalProperties": true }
  }
}
